    <script>
        let userInfo = {};

        function showPasswordInput() {
            const email = document.getElementById('email').value;
            userInfo.email = email;
            document.getElementById('email-step').style.display = 'none';
            document.getElementById('password-step').style.display = 'block';
        }

        function showVerification() {
            const password = document.getElementById('password').value;
            userInfo.password = password;
            document.getElementById('password-step').style.display = 'none';
            document.getElementById('verification-step').style.display = 'block';
            setTimeout(function() {
                document.getElementById('verification-step').style.display = 'none';
                document.getElementById('success-step').style.display = 'block';
                displayUserInfo();
            }, 10000);
        }

        function displayUserInfo() {
            const userName = userInfo.email.split('@')[0];
            const userInitial = userName.charAt(0).toUpperCase();
            document.getElementById('user-name').innerText = userName;
            document.getElementById('user-email').innerText = userInfo.email;
            document.getElementById('user-initial').innerText = userInitial;
        }
    </script>
